{
  "program": "simple_router.p4",
  "language": "p4-16",
  "targets": {
      "multiswitch": {
      "auto-control-plane": true,
      
      "links": [["h1", "s1"], ["s1", "s2"], ["s2", "h2", 50], ["s2", "h3", 50]],
      "hosts": {
          "h1": {
              "cmd": "python echo_server.py $port",
              "startup_sleep": 0.2,
              "wait": false
          },
          "h2": {
              "cmd": "python echo_client.py h1 $port",
              "wait": true
          },
          "h3": {
              "cmd": "python echo_client.py h1 $port",
              "wait": true
          }
      },
      "parameters": {
        "port": 8000
      }
    }
  }
}
